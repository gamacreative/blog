@{
    Layout = "~/Views/Shared/_LayoutPosts.cshtml";
}
@model Post

<div class="col-lg-7">
    <h2>@Model.Title</h2>
    @if (!string.IsNullOrEmpty(Model.imgUrl))
    {
        <img alt="image post" class="img-responsive" src="@Model.imgUrl" />
    }
    <h3>@Model.Subtitle</h3>

    @Html.Raw(Model.Text)
</div>
<div class="col-lg-offset-1 col-lg-3 col-md-4 col-sm-4 col-xs-12">
    @await Html.PartialAsync("_Lead", new Lead())
</div>
